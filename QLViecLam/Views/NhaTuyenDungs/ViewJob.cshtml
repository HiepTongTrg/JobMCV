@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model List<XinViec>
<div class="container-scroller">
    <!-- partial:partials/_navbar.html -->
    <nav class="navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
        <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
            <a class="navbar-brand brand-logo mr-5" href=@Url.ActionLink("Index","CongViecs")><img src="~/Admin/images/logo.svg" class="mr-2" alt="logo" /></a>
            <a class="navbar-brand brand-logo-mini" href=@Url.ActionLink("Index","CongViecs")><img src="~/Admin/images/logo-mini.svg" alt="logo" /></a>
        </div>
        <div class="navbar-menu-wrapper d-flex align-items-center justify-content-end">

            <ul class="navbar-nav mr-lg-2">
                <li class="nav-item nav-search d-none d-lg-block">
                    <form asp-action="TimKiem" asp-controller="NhaTuyenDungs">
                        <div class="input-group">
                            <div class="input-group-prepend hover-cursor" id="navbar-search-icon">
                                <span class="input-group-text" id="search">
                                    <i class="icon-search"></i>
                                </span>
                            </div>
                            <input name="Search" type="text" class="form-control" id="navbar-search-input" placeholder="Search now" aria-label="search" aria-describedby="search">
                        </div>
                    </form>
                </li>
            </ul>


        </div>
    </nav>
    <!-- partial -->
    <div class="container-fluid page-body-wrapper">
        <!-- partial:partials/_settings-panel.html -->
        <!-- partial -->
        <!-- partial:partials/_sidebar.html -->
        <nav class="sidebar sidebar-offcanvas" id="sidebar">
            <ul class="nav">
                <li class="nav-item">
                    <a class="nav-link" href=@Url.ActionLink("ViewJob","NhaTuyenDungs")>
                        <i class="icon-grid menu-icon"></i>
                        <span class="menu-title">List Candidate</span>
                    </a>
                </li>
            </ul>

        </nav>
        <!-- partial -->
        <div class="main-panel">
            <div class="content-wrapper">
                <div class="row">
                    <div class="col-md-12 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <p class="card-title">Danh sách ứng viên</p>
                                <div class="row">
                                    <div class="col-12">
                                        <div class="table-responsive">
                                            <table class="display expandable-table" style="width:100%">
                                                <thead>
                                                    <tr>
                                                        <th>Ảnh Ứng Viên</th>
                                                        <th>Tên Ứng Viên</th>
                                                        <th>Địa Chỉ</th>
                                                        <th>Điện Thoại</th>
                                                        <th>Email</th>
                                                        <th>CV</th>
                                                        <th>Nhận</th>
                                                        <th>Từ Chối</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model)
                                                    {

                                                            <tr>
                                                                <td><img width="50px" height="50px" src="~/AnhUV/@item.UngVien.Avatar"></td>
                                                                <td>@item.UngVien.TenUngVien</td>
                                                                <td>@item.UngVien.DiaChi</td>
                                                                <td>@item.UngVien.DienThoai</td>
                                                                <td>@item.UngVien.Email</td>
                                                                <td><a href="~/CV/@item.CV">CV</a></td>
                                                                <td><a href=@Url.ActionLink("Accept","NhaTuyenDungs",new{Id=item.ID})><i class="material-icons" style="color:greenyellow">check</i></a></td>
                                                                <td><a href=@Url.ActionLink("Reject","NhaTuyenDungs",new{Id=item.ID})><i class="material-icons" style="color:orangered">close</i></a></td>
                                                            </tr>
                                                        
                                                        
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
            <!-- partial:partials/_footer.html -->
            <!-- partial -->
        </div>
        <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>
<!-- container-scroller -->

@model CongViec
@{
    TaiKhoan user = (TaiKhoan)ViewData["user"];
}
@section acc{
    @if(user == null){
        <a href=@Url.ActionLink("Login","TaiKhoans") class="btn btn-primary border-width-2 d-none d-lg-inline-block"><span class="mr-2 icon-lock_outline"></span>Log In</a>
    }else{
        @if(user.nhaTuyenDung != null)
        {
            <a href=@Url.ActionLink("PostJob","CongViecs") class="btn btn-outline-white border-width-2 d-none d-lg-inline-block"><span class="mr-2 icon-add"></span>Post a Job</a>
        }
        <a href=@Url.ActionLink("Logout","TaiKhoans") class="btn btn-primary border-width-2 d-none d-lg-inline-block"><span class="mr-2 icon-lock_outline"></span>Log Out</a>
    }
}
@section job{
    @if (user != null)
    {
        @if (user.nhaTuyenDung != null)
        {
            <li><a class="nav-link active" href=@Url.ActionLink("Admin","NhaTuyenDungs",new {Id=user.nhaTuyenDung.ID})>Manager Job</a></li>
        }
        @if (user.ungVien != null)
        {
            <li><a class="nav-link active" href=@Url.ActionLink("ListJob","XinViecs",new {Id=user.ungVien.ID})>List Apply Job</a></li>
        }
    }
}
<section class="section-hero overlay inner-page bg-image" style="background-image: url(/images/hero_1.jpg)" id="home-section">
    <div class="container">
        <div class="row">
        </div>
    </div>
</section>
<section class="site-section">
        <div class="container">
            <div class="row align-items-center mb-5">
                <div class="col-lg-8 mb-4 mb-lg-0">
                    <div class="d-flex align-items-center">
                        <div class="border p-2 d-inline-block mr-3 rounded">
                            <img src="/AnhNTD/@Model.NhaTuyenDung.Avatar" alt="Image">
                        </div>
                        <div>
                            <h2>@Model.TenCongViec</h2>
                            <div>
                                <span class="ml-0 mr-2 mb-2"><span class="icon-briefcase mr-2"></span>@Model.NhaTuyenDung.TenCongTy</span>
                                <span class="m-2"><span class="icon-room mr-2"></span>@Model.DiaChi</span>
                                <span class="m-2"><span class="icon-clock-o mr-2"></span><span class="text-primary">@Model.LoaiCV</span></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="row">

                        <div class="col-6">
                            <a asp-action="Index" asp-controller="XinViecs" asp-route-Id="@Model.ID" class="btn btn-block btn-primary btn-md">Apply Now</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8">
                    <div class="mb-5">

                        <h3 class="h5 d-flex align-items-center mb-4 text-primary"><span class="icon-align-left mr-3"></span>Job Description</h3>
                        <p>@Model.MoTa</p>

                    </div>


                </div>
                <div class="col-lg-4">
                    <div class="bg-light p-3 border rounded mb-4">
                        <h3 class="text-primary  mt-3 h5 pl-3 mb-3 ">Job Summary</h3>
                        <ul class="list-unstyled pl-3 mb-0">
                            <li class="mb-2"><strong class="text-black">Published on:</strong> @Model.NgayDang</li>
                            <li class="mb-2"><strong class="text-black">Employment Status:</strong> @Model.LoaiCV</li>
                            <li class="mb-2"><strong class="text-black">Experience:</strong> No exp</li>
                            <li class="mb-2"><strong class="text-black">Job Location:</strong> @Model.DiaChi</li>
                            <li class="mb-2"><strong class="text-black">Salary:</strong> @Model.Luong</li>
                            <li class="mb-2"><strong class="text-black">Gender:</strong> Any</li>
                        </ul>
                    </div>



                </div>
            </div>
            
        </div>
    
</section>